generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model todo_list {
  id               Int      @id @default(autoincrement())
  list_name        String
  list_description String?
  is_archived      Boolean  @default(false)
  created_at       DateTime @default(now())
}

model todo {
  id         Int     @id @default(autoincrement())
  userId     String
  text       String
  isComplete Boolean @default(false)
}
